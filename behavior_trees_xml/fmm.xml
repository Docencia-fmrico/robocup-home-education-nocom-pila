<root main_tree_to_execute = "MainTree" >
    <BehaviorTree ID="MainTree">
        <Sequence>
            <RetryUntilSuccessful num_attempts="1">
                <Sequence>
                    <ReactiveSequence>
                        <Go_person_fmm name="Go_person" r_person="{person}"/>
                        <Detect_person_fmm name="Detect_person" w_person="{person}"/>
                    </ReactiveSequence>
                    <Speak_person_fmm name="Speak_person"/>
                    <Go_operator_fmm name="Go_operator"/>
                    <Describe_person_fmm name="Describe_person"/>
                </Sequence>
            </RetryUntilSuccessful>
            <Go_home_fmm name="Go_home"/>
        </Sequence>
    </BehaviorTree>
</root>
